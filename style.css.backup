/* ===== Ïï†ÎãàÎ©îÏù¥ÏÖò ===== */

/* Î∞îÏö¥Ïä§ */
@keyframes petBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
}

#saipet-container.bounce .st-pet-sprite,
#saipet-container-2.bounce .st-pet-sprite {
    animation: petBounce 0.5s ease;
}

#saipet-container.bounce .st-pet-sprite.flipped,
#saipet-container-2.bounce .st-pet-sprite.flipped {
    animation: petBounceFlipped 0.5s ease;
}

@keyframes petBounceFlipped {
    0%, 100% { transform: scaleX(-1) translateY(0); }
    50% { transform: scaleX(-1) translateY(-15px); }
}

/* ÌùîÎì§Î¶º */
@keyframes petShake {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(-10deg); }
    75% { transform: rotate(10deg); }
}

#saipet-container.shake .st-pet-sprite,
#saipet-container-2.shake .st-pet-sprite {
    animation: petShake 0.5s ease;
}

#saipet-container.shake .st-pet-sprite.flipped,
#saipet-container-2.shake .st-pet-sprite.flipped {
    animation: petShakeFlipped 0.5s ease;
}

@keyframes petShakeFlipped {
    0%, 100% { transform: scaleX(-1) rotate(0deg); }
    25% { transform: scaleX(-1) rotate(-10deg); }
    75% { transform: scaleX(-1) rotate(10deg); }
}

/* ÏÉÅÌÉúÎ≥Ñ Ïï†ÎãàÎ©îÏù¥ÏÖò - ÏÑ±Îä• ÏµúÏ†ÅÌôî */
#saipet-container.state-thinking .st-pet-sprite,
#saipet-container-2.state-thinking .st-pet-sprite,
#saipet-container.state-sleeping .st-pet-sprite,
#saipet-container-2.state-sleeping .st-pet-sprite {
    will-change: transform;
}

#saipet-container.state-thinking .st-pet-sprite,
#saipet-container-2.state-thinking .st-pet-sprite {
    animation: petThinking 2s ease-in-out infinite;
}

/* ÎìúÎûòÍ∑∏ Ï§ëÏóêÎäî ÏÇ¥ÎûëÏÇ¥Îûë ÌùîÎì§Î¶¨Í∏∞ */
#saipet-container.dragging .st-pet-sprite,
#saipet-container-2.dragging .st-pet-sprite {
    animation: petDragWiggle 0.4s ease-in-out infinite !important;
    will-change: transform;
}

#saipet-container.dragging .st-pet-sprite.flipped,
#saipet-container-2.dragging .st-pet-sprite.flipped {
    animation: petDragWiggleFlipped 0.4s ease-in-out infinite !important;
}

@keyframes petDragWiggle {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(-3deg); }
    75% { transform: rotate(3deg); }
}

@keyframes petDragWiggleFlipped {
    0%, 100% { transform: scaleX(-1) rotate(0deg); }
    25% { transform: scaleX(-1) rotate(-3deg); }
    75% { transform: scaleX(-1) rotate(3deg); }
}

@keyframes petThinking {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.03); }
}

#saipet-container.state-sleeping .st-pet-sprite,
#saipet-container-2.state-sleeping .st-pet-sprite {
    animation: petSleeping 3s ease-in-out infinite;
}

@keyframes petSleeping {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(2px); }
}

/* ÌïòÌä∏ ÌååÌã∞ÌÅ¥ (Ïì∞Îã§Îì¨Í∏∞) */
.st-pet-heart-particle {
    position: absolute;
    top: 15%;
    left: 50%;
    pointer-events: none;
    opacity: 0;
    animation: heartFloat 1.3s ease-out forwards;
    animation-delay: var(--h-delay, 0s);
    z-index: 10;
}

@keyframes heartFloat {
    0% {
        opacity: 1;
        transform: translate(0, 0) scale(0.4);
    }
    40% {
        opacity: 1;
        transform: translate(calc(var(--h-x, 0px) * 0.4), -30px) scale(1.2);
    }
    100% {
        opacity: 0;
        transform: translate(var(--h-x, 0px), -90px) scale(1.3) rotate(20deg);
    }
}

/* Ï°∏Í∏∞ zzZ Ïù¥ÌéôÌä∏ ‚Äî Î®∏Î¶¨ ÏúÑÏπòÏóê Í≤πÏ≥êÏÑú ÌëúÏãú */
.st-pet-zzz {
    position: absolute;
    top: 15%;
    right: 10%;
    pointer-events: none;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0;
}

.st-pet-zzz span {
    opacity: 0;
    animation: zzzFloat 3s ease-in-out infinite;
    color: rgba(100, 100, 140, 0.85);
    font-weight: 700;
    text-shadow: 0 1px 4px rgba(0,0,0,0.18);
}

.zzz-1 {
    font-size: 15px;
    animation-delay: 0s !important;
}
.zzz-2 {
    font-size: 20px;
    animation-delay: 0.6s !important;
    margin-left: 6px;
}
.zzz-3 {
    font-size: 26px;
    animation-delay: 1.2s !important;
    margin-left: 12px;
}

@keyframes zzzFloat {
    0% {
        opacity: 0;
        transform: translateY(5px);
    }
    20% {
        opacity: 0.8;
    }
    80% {
        opacity: 0.8;
        transform: translateY(-20px);
    }
    100% {
        opacity: 0;
        transform: translateY(-30px);
    }
}

/* ===== Í±∑Í∏∞ Ïï†ÎãàÎ©îÏù¥ÏÖò ===== */

#saipet-container.walking,
#saipet-container-2.walking {
    transition: left 2.5s ease-in-out, top 2.5s ease-in-out;
}

#saipet-container.walking .st-pet-sprite,
#saipet-container-2.walking .st-pet-sprite {
