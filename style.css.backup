@keyframes petWaddleFlipped {
    0%, 100% { transform: scaleX(-1) rotate(0deg) translateY(0); }
    25% { transform: scaleX(-1) rotate(-3deg) translateY(-2px); }
    75% { transform: scaleX(-1) rotate(3deg) translateY(-2px); }
